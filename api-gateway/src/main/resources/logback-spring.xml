<configuration>
    <!-- Define a property for startup timestamp or unique ID -->
    <timestamp key="startupTime" datePattern="yyyyMMdd-HHmmss" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Startup-specific Rolling File Appender -->
    <appender name="RUNTIME_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Log file name includes startup timestamp -->
        <file>../Company_Resources_Management_Application/api-gateway/logs/api-gateway-service-${startupTime}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Roll over based on size, keep startup timestamp in archived files -->
            <fileNamePattern>../Company_Resources_Management_Application/api-gateway/logs/api-gateway-service-${startupTime}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="RUNTIME_FILE" />
    </root>
</configuration>